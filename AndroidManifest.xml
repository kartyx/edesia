 <manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edesia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>	
	 <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	 <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Edesia">
        <activity
            android:name="com.edesia.WelcomeActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
              	<action android:name="android.intent.action.MAIN"/>
              	<category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
       </activity>
       <activity
            android:name="com.edesia.ItemsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.edesia.ITEMSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.edesia.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.edesia.LOGINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.edesia.ChangeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.edesia.CHANGEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.edesia.CartActivity"
            android:noHistory="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.edesia.CARTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
                <activity
            android:name="com.edesia.TokenActivity"
            android:noHistory="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.edesia.TOKENACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
                <activity
            android:name="com.edesia.AddCartActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.edesia.ADDCARTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>      
        <activity
            android:name="com.edesia.DashBoardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.edesia.DASHBOARDACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>  
  </application>
        

</manifest>
